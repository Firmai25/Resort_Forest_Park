<Window x:Class="Resort_Forest_Park.WIndows.AdministratorWindows.MainAdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Resort_Forest_Park.WIndows.AdministratorWindows"
        mc:Ignorable="d"
        Title="MainAdminWindow" 
        Height="450" 
        Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Timer"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="30"
                   x:Name="TbTimer"/>
        <Button Content="Посмотреть все заказы"
                Grid.Row="1"
                Click="AllOrder_Click"/>
        <Button Content="Посмотреть история входа"
                Grid.Row="3"
                Click="HistoryLogin_Click"/>
        <Button Content="Выйти"
                Grid.Row="5"
                Click="Exit_Click"/>
    </Grid>
</Window>
